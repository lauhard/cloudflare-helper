{
  "name": "@lauhard/cloudflare-helper",
  "version": "1.0.0",
  "description": "a helper class for sveltekit-projects with cloudflare workers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lauhard/cloudflare-helper.git"
  },
  "author": "lauhard",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lauhard/cloudflare-helper/issues"
  },
  "homepage": "https://github.com/lauhard/cloudflare-helper#readme",
  "dependencies": {
    "@cloudflare/workers-types": "^4.20241022.0"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
